@page
@model LoginModel
@{
    ViewData["Title"] = "Log In";
}

<section class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5 overflow-hidden">
                <div class="card-body p-4 p-sm-5">
                    <h1 class="card-title text-center mb-5 fw-light fs-5">Log In</h1>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true"/>
                            <label asp-for="Input.Password" class="form-label">Senha</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    
                    
                        <div class="form-check mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe"/>
                                Manter-me Conectado
                            </label>
                        </div>

                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-lg btn-login btn-primary text-uppercase fw-bold">Conectar-me</button>                            
                        </div>
                        <hr class="my-4" />
                        <nav class="d-grid">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" id="forgot-password" asp-page="./ForgotPassword">Esqueceu a Senha?</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar como novo usuario</a>
                                </li>                                
                            </ul>
                        </nav>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
 .btn-login {
 font-size:  0.9rem;
 letter-spacing: 0.05rem;
 padding: 0.75rem 1rem;
 }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
